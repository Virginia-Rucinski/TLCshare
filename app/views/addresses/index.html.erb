<div class="scaf">
  <!-- <p id="notice"><%= notice %></p> -->
  <h1>Addresses</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Business</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Website</th>
          <th>Notes</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class="scaf">
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.name %></td>
            <td><%= address.business %></td>
            <td><%= address.address %></td>
            <td><%= address.phone %></td>
            <td><%= address.email %></td>
            <td><%= address.website %></td>
            <td><%= address.notes %></td>
            <td><%= address.created_at %></td>
            <td><%= address.updated_at %></td>
            <td><%= address.user_id %></td>
            <td><%= link_to 'Show', address %></td>
            <td><%= link_to 'Edit', edit_address_path(address) %></td>
            <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  <%= link_to 'New Address', new_address_path %>
</div>